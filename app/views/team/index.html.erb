<%
  # META
  set_meta_tags :title => t('team.index.meta'), :reverse => true
  set_meta_tags :description => '', :reverse => true
%>

<%= stylesheet_link_tag "team/index", :media => "all" %>

<div class="team-page">
  <div class="team-page-content">
    <div class='team-title'>
      <h2><%= t 'team.index.title' %></h2>
    </div>
    <div class="lead">
        <div class="lead-image">
            <%= image_tag "leads/rory.JPG" %>
        </div>
        <div class="lead-text">
          <div class='title-box'>
            <h3><%= t 'team.index.leads.project.title' %></h3>
          </div>
          <div class='text-box'>
            <p><%= t 'team.index.leads.project.text' %></p>
          </div>
        </div>
      </div>
    <div class="lead2">
        <div class="lead-text">
          <div class='title-box'>
            <h3><%= t 'team.index.leads.technical.title' %></h3>
          </div>
          <div class='text-box'>
            <p><%= t 'team.index.leads.technical.text' %></p>
          </div>
        </div>
        <div class="lead-image">
          <%= image_tag "leads/aditya.JPG" %>
        </div>
    </div>
    <div class="collapse-boxes">
      <div class="aerostructures team">
        <div>
            <button class="link-button" data-toggle="collapse" data-target="#aerostructures" aria-expanded="true" aria-controls="aerostructures">
              <p><%= link_to t('team.index.teams.aerostructures'), team_view_path(id: 'aerostructures') %></p>
            </button>
        </div>
        <%= render 'team/aerostructures' %>
      </div>
      <div class="avionics team">
        <div>
          <button class="link-button" data-toggle="collapse" data-target="#avionics" aria-expanded="true" aria-controls="avionics">
            <p><%= link_to t('team.index.teams.avionics'), team_view_path(id: 'avionics') %></p>
          </button>
        </div>
        <%= render 'team/avionics' %>
      </div>
      <div class="resources team">
        <div>
          <button class="link-button" data-toggle="collapse" data-target="#resources" aria-expanded="true" aria-controls="resources">
            <p><%= link_to t('team.index.teams.resources'), team_view_path(id: 'resources') %></p>
          </button>
        </div>
        <%= render 'team/resources' %>
      </div>
      <div class="webdevelopers team">
        <div>
          <button class="link-button" data-toggle="collapse" data-target="#webdevelopers" aria-expanded="true" aria-controls="webdevelopers">
            <p><%= link_to t('team.index.teams.web'), team_view_path(id: 'webdevelopers') %></p>
          </button>
        </div>
        <%= render 'team/webdevelopers' %>
      </div>
      <div class='contact-desc'>
        <p><%= t 'team.index.contact.text' %></p>
      </div>
  </div>
</div>